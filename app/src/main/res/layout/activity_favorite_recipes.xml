    <fragment
        android:id="@+id/fragmentSavedRecipe"
        android:name="fisher.andrew.stockipy.ui.recipes.SavedRecipeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_saved_recipe"
        android:layout_below="@+id/yourRecipesTextView"/>

