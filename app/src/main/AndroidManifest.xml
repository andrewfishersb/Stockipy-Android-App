<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fisher.andrew.stockipy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".FridgeStock"
            android:label="Back Home">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.MainActivity" />
        </activity>
        <activity android:name=".FindRecipe"
            android:label="Back Home">>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.MainActivity" />
        </activity>
        <activity android:name=".ShoppingList"
            android:label="Back Home">>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.MainActivity" />
        </activity>
        <activity android:name=".YourRecipes"
            android:label="Back to Recipes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.FindRecipe" />
        </activity>
        <activity android:name=".AddToShoppingList"
            android:label="Back to your Shopping List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.ShoppingList" />
        </activity>
        <activity android:name=".AddToFridge"
            android:label="Back to your Fridge">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.ShoppingList" />
        </activity>
    </application>

</manifest>