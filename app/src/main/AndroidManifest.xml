<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fisher.andrew.stockipy">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FridgeActivity"
            android:label="Back Home">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.MainActivity" />
        </activity>
        <activity
            android:name=".SearchRecipeActivity"
            android:label="Back Home">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.MainActivity" />
        </activity>
        <activity
            android:name=".ShoppingListActivity"
            android:label="Back Home">
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.MainActivity" />
        </activity>
        <activity
            android:name=".YourRecipesActivity"
            android:label="Back to Recipes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SearchRecipeActivity" />
        </activity>
        <activity
            android:name=".AddToShoppingListActivity"
            android:label="Back to your Shopping List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShoppingListActivity" />
        </activity>
        <activity
            android:name=".AddToFridgeActivity"
            android:label="Back to your Fridge">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShoppingListActivity" />
        </activity>
        <activity android:name=".RecipeActivity"
            android:label="Back to Recipes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SearchRecipeActivity" />


        </activity>
    </application>

</manifest>