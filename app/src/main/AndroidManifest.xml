<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fisher.andrew.stockipy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FridgeStock" />
        <activity android:name=".FindRecipe" />
        <activity android:name=".YourRecipes" />
        <activity android:name=".ShoppingList" />
        <activity android:name=".AddToShoppingList">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="fisher.andrew.stockipy.ShoppingList"></meta-data>

        </activity>
    </application>

</manifest>